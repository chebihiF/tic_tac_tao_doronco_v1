<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:fontFamily="monospace"
        android:gravity="center"
        android:text="@string/title"
        android:textColor="#673AB7"
        android:textSize="30sp"
        android:textStyle="bold" />

    <GridLayout
        android:id="@+id/g1"
        android:layout_marginTop="100dp"
        android:layout_below="@id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:paddingStart="30dp"
        android:columnCount="3"
        android:rowCount="3">

        <Button android:id="@+id/b1" />
        <Button android:id="@+id/b2" android:layout_marginStart="20dp" android:layout_marginEnd="20dp" />
        <Button android:id="@+id/b3" />
        <Button android:id="@+id/b4" />
        <Button android:id="@+id/b5" android:layout_marginStart="20dp" android:layout_marginEnd="20dp" />
        <Button android:id="@+id/b6" />
        <Button android:id="@+id/b7" />
        <Button android:id="@+id/b8" android:layout_marginStart="20dp" android:layout_marginEnd="20dp" />
        <Button android:id="@+id/b9" />

    </GridLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restart"
        android:layout_alignParentBottom="true"
        android:layout_margin="50dp"
        android:onClick="restart"
        />


</RelativeLayout>